html 
    head 
        link(rel="stylesheet", href="productos.css")
        title="Tienda"
    body 
        h2(class="productsTittle")="Binvenido a la tienda"
            
        

        if productos.length===0
            h2(class="productsTittle")="No hay productos agregados"
        else
            ul(class="productListContainer")   
                each prod in productos 
                    li(class="productCard")
                        h2(class="productTittle")=prod.tittle
                        img(class="productImage" src=prod.thumbnail alt=prod.tittle)
                        p(class="productPrice")="Precio " +prod.price +".00"
                    


        a(class="botonInicio" href="/")="Inicio"